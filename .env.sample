# Environment Variables Template
# Copy this to .env.local for local development
# Add these variables to your Vercel project settings

# Application Configuration
NODE_ENV=development
PORT=7164

# CORS Configuration
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# redis configuration
REDIS_CONNECTION_ON=0
REDIS_URL=redis-url
REDIS_TOKEN=redis-token

# MYSQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_database_name
MYSQL_DATABASE=your_database_user
MYSQL_PASSWORD=your_database_password

DB_SUPABASE_URL=your_supabase_url
DB_SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your_cookie_secret_key_here_min_32_chars
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false